<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/image"
        android:src="@drawable/image0"
        />

    <TextView
        android:id="@+id/nomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom: "
        android:layout_toEndOf="@+id/image"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/prenomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom: "
        android:layout_toEndOf="@+id/nomTextView"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/villeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville: "
        android:layout_below="@+id/prenomTextView"
        android:layout_toEndOf="@+id/image"
        android:layout_marginLeft="10dp"
        android:textColor="#888888"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sexeTextView"
        android:text="sexe"
        android:layout_toEndOf="@+id/image"
        android:layout_below="@+id/villeTextView"
        android:layout_marginLeft="10dp"
        android:textColor="#888888"
        android:textSize="12sp"
    />
</RelativeLayout>

